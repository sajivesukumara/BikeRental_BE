# https://editorconfig.org

# Top-most EditorConfig file
root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf

[*.{yml,yaml}]
indent_style = space
tab_width = 2
indent_size = 2

[*.sh]
indent_style = space
tab_width = 2
indent_size = 2

[*.py]
indent_style = space
tab_width = 4
indent_size = 4

[Makefile]
indent_style = tab
tab_width = 4
indent_size = 4

[*Dockerfile*]
indent_style = space
tab_width = 4
indent_size = 4